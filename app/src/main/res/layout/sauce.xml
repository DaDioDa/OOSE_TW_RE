<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Menu">
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_hor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.0"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_hor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.23"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_hor3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.46"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_hor4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.7"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_hor5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="1"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_ver1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_ver2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_ver3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_ver4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7"/>
    <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="@id/guide_hor1"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver1">
        <RadioButton
                android:id="@+id/sauce_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="青醬"
                android:textSize="15dp"/>
        <RadioButton
                android:id="@+id/sauce_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="紅醬"
                android:textSize="15dp"/>
        <RadioButton
                android:id="@+id/sauce_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="白醬"
                android:textSize="15dp" />
    </RadioGroup>
    <TextView
            android:id="@+id/sauce2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor2"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver2" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor2"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver1" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor2"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver3" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor2"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver4" />



    <Button
            android:id="@+id/sauce_cancel"
            android:layout_width="73dp"
            android:layout_height="50dp"
            android:text="取消"
            android:textSize="15dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor3"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver3"/>
    <Button
            android:id="@+id/sauce_ok"
            android:layout_width="73dp"
            android:layout_height="50dp"
            android:text="確定"
            android:textSize="15dp"
            app:layout_constraintTop_toTopOf="@id/guide_hor3"
            app:layout_constraintLeft_toLeftOf="@id/guide_ver4"/>


</androidx.constraintlayout.widget.ConstraintLayout>



