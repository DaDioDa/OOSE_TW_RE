<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CheckoutpageActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/aa"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.5"
            android:background="@drawable/leftline">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/buttonSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/aa"
                app:layout_constraintLeft_toLeftOf="@id/aa"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="100dp">
            <Button
                    android:id="@+id/cash"
                    android:layout_width="300dp"
                    android:layout_height="125dp"
                    android:text="現金"
                    android:textSize="30dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <Button
                    android:id="@+id/creditCard"
                    android:layout_width="300dp"
                    android:layout_height="125dp"
                    android:text="信用卡"
                    android:textSize="30dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cash"/>
            <TextView
                    android:id="@+id/discountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="打9折"
                    android:textSize="30dp"
                    app:layout_constraintTop_toBottomOf="@id/creditCard"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="50dp"/>
            <Switch
                    android:id="@+id/discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff=""
                    android:textOn=""
                    android:layout_marginTop="55dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintLeft_toRightOf="@+id/discountText"
                    app:layout_constraintTop_toBottomOf="@id/creditCard"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <Button
                android:id="@+id/checkoutDone"
                android:layout_width="300dp"
                android:layout_height="125dp"
                android:text="$360"
                android:textSize="30dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/detail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintWidth_percent="0.5">
        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.15"/>
        <!--桌號-->
        <TextView
                android:id="@+id/tableNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A4"
                android:textSize="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="10dp"
        />
        <!--訂單編號-->
        <TextView
                android:id="@+id/orderNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="order num："
                android:textSize="20dp"

                android:layout_marginLeft="20dp"
                android:layout_marginBottom="25dp"
                app:layout_constraintBottom_toBottomOf="@id/guide1"
                app:layout_constraintLeft_toRightOf="@id/tableNum"/>
        <TextView
                android:id="@+id/orderNumId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="25dp"
                app:layout_constraintBottom_toBottomOf="@id/guide1"
                app:layout_constraintLeft_toRightOf="@id/orderNum"/>
        <!--已出單內容框-->
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/guide1"
                app:layout_constraintLeft_toLeftOf="@id/detail"
                app:layout_constraintWidth_percent="0.2"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="30dp"
        >
            <TextView
                    android:id="@+id/meatName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="唐揚雞義大利麵"
                    android:textSize="30dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="@id/bb"
                    app:layout_constraintLeft_toLeftOf="parent"
            />
            <TextView
                    android:id="@+id/sauceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="青醬X2"
                    android:textSize="25dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/meatName"
                    app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                    android:id="@+id/meatCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="35dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="40dp"
                    app:layout_constraintLeft_toRightOf="@id/meatName"
                    app:layout_constraintTop_toTopOf="@id/bb"/>
            <TextView
                    android:id="@+id/meatPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$360"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="155dp"
                    app:layout_constraintLeft_toRightOf="@id/sauceName"
                    app:layout_constraintTop_toBottomOf="@id/meatCount"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>